{% extends "Admin/admin.html.twig" %}

{% block content %}
    
 <div class="col-md-7 col-md-offset-2 table-listing">
        <div class="row">
            <h2>Client</h2>
            <p>Admin <a href="{{ path('admin_client_edit')}}">add client</a></p>
