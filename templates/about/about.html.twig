{% extends "layout.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/about/about.css") }}"/>
{% endblock %}

{% block content %}
    <main id="about-content" class="container">
        <section class="row">
            <div class="col-xs-12 text-center">
                <h1>{{ "A propos"|upper }}</h1>
            </div>
        </section>
        {% for about in abouts%}
        <section class="row">
            <div class="col-xs-12">
                <div id="{{ about.section }}" class="about-content">
                    <h2>{{ about.title }}</h2>
                    {{ about.content|raw }}
                </div>
            </div>
        </section>
        {% endfor %}
        <section id="team-members">
            <div class="row">
            {% for teamMember in teamMembers  %}
                <div class="team-member col-sm-6 col-md-3">
                    <div class="text-center">
                        <img src="http://placehold.it/200x200" />
                    </div>
                    <h3 class="text-center">{{ teamMember.fullName }}</h3>
                    <h4  class="text-center">{{ teamMember.title }}</h4>
                </div>
          
            {% endfor %}
            </div>
        </section>
    </main>
    <div id="team-layer">
        
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        {#var aboutContent = '{{ about.content }}';
        console.log(aboutContent);#}
    </script>
    <script src="{{ asset('js/about/about.js') }}"></script>
{% endblock %}